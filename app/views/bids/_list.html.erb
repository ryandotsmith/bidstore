<table id='customer_bids_index_table' class='tablesorter'>
<caption>Bids</caption>
<thead>
  <tr>
  <th>Details</th>
  <th>Created At</th>
  <th>Comments</th>  
	<th>Lanes</th>
  </tr>
</thead>
<tbdoy>
	<% bids.each do |bid|%>
  <tr>
		<td><%= link_to "details", bid, :class => :simple %></td>
    <td><%= date_ify bid.created_at %></td>
    <td><%= shorten bid.comments, 80 %></td>
		<td><%= bid.lanes.count.to_s %></td>
  </tr>
	<% end %>
</tbody>
</table>
